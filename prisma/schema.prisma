generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SuperAdmin {
  id       String  @id @default(uuid())
  name     String  @unique
  fcmToken String?
  password String
}

model User {
  id            String         @id @default(uuid())
  name          String
  mobile        String         @unique
  dob           DateTime?
  sex           String?
  verified      Boolean
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  memberId      String?
  tickets       Appointments[]
  Member        Member?        @relation(fields: [memberId], references: [id])
  BusinessUsers BusinessUser[] @relation("BusinessUserToUser")
  fcmToken      String?

  @@index([mobile, name])
}

model Package {
  id             String         @id @unique @default(uuid())
  name           String
  businessUserId String
  price          String?
  durationMale   Json
  durationFemale Json
  BusinessUser   BusinessUser   @relation(fields: [businessUserId], references: [id])
  Appointments   Appointments[]
}

model Appointments {
  id             String       @id @default(uuid())
  userId         String
  businessUserId String
  status         String
  date           String
  ticketId       Int          @unique @default(autoincrement())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  slot           Json
  memberId       String
  serviceId      String
  service        Package      @relation(fields: [serviceId], references: [id])
  BusinessUser   BusinessUser @relation(fields: [businessUserId], references: [id])
  Member         Member       @relation(fields: [memberId], references: [id])
  User           User         @relation(fields: [userId], references: [id])
}

model BusinessUser {
  id             String         @id @unique @default(uuid())
  name           String
  businessName   String
  mobile         String         @unique
  email          String?        @unique
  password       String
  slug           String         @unique
  about          String?
  address        String?
  verified       Boolean
  approved       Boolean
  membersLength  Int            @default(2)
  slots          Json?
  breakTimeEnd   String?
  breakTimeStart String?
  endTime        String?
  startTime      String?
  weekdays       Json?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  type           String?
  tickets        Appointments[]
  members        Member[]
  packages       Package[]
  customers      User[]         @relation("BusinessUserToUser")
  fcmToken       String?

  @@index([mobile, name])
}

model Member {
  id             String         @id @default(uuid())
  name           String
  mobile         String         @unique
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  businessUserId String?
  password       String
  tickets        Appointments[]
  BusinessUser   BusinessUser?  @relation(fields: [businessUserId], references: [id])
  customers      User[]
  fcmToken       String?

  @@index([mobile, name])
}
