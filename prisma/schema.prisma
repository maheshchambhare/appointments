generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  name          String
  mobile        String         @unique
  dob           DateTime?
  sex           String?
  verified      Boolean
  tickets       Appointments[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  BusinessUsers BusinessUser[]

  @@index([mobile, name])
}

model Appointments {
  id             String       @id @default(uuid())
  User           User         @relation(fields: [userId], references: [id])
  userId         String
  BusinessUser   BusinessUser @relation(fields: [businessUserId], references: [id])
  businessUserId String
  ticketId       String
  slot           String
  status         String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model BusinessUser {
  id           String         @id @default(uuid())
  name         String
  businessName String
  mobile       String         @unique
  email        String?        @unique
  password     String
  slug         String         @unique
  about        String?
  address      String?
  verified     Boolean
  approved     Boolean
  tickets      Appointments[]
  customers    User[]
  slots        String[]
  weekdays     Json?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([mobile, name])
}
